<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui18.NewPage3"
             Title="18.4">
    <VerticalStackLayout WidthRequest="600" HorizontalOptions="Center" Spacing="15">
        <Label 
            Text="Kalkulator napiwków"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large"/>
        <Entry
            x:Name="Kwota"
            Keyboard="Numeric"
            Placeholder="Wpisz kwote rachunku"
            PlaceholderColor="LightGray"
            Text="{Binding Kwota, Mode=TwoWay}"/>
        <Slider
            x:Name="Napiwek"
            Minimum="0"
            Maximum="30"
            Value="{Binding Napiwek, Mode=TwoWay}"/>
        <Label
            x:Name="WartoscNapiwkuLabel"
            Text="{Binding Napiwek, Mode=OneWay , StringFormat='Napiwek to: {0:F2} % '}"
            HorizontalOptions="Center"
            FontSize="Medium"/>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
        <Label
            Text="Podziel Rachunek"
            FontSize="Medium"/>
        <Switch
            x:Name="PareOsob"
            Toggled="LiczbaOsob"/>
        </HorizontalStackLayout>
        <Entry
            x:Name="OsobyEntry"
            Text="{Binding Liczbaosob, Mode=TwoWay}"
            Placeholder="Wpisz liczbe osób"
            PlaceholderColor="LightGray"
            IsVisible="False"/>
        <Label
            x:Name="NapiwekLabel"
            Text="{Binding Rachunek, Mode=OneWay, StringFormat='Kwota napiwku to: {0:F2} zł '}"
            HorizontalOptions="Center"
            FontSize="Medium"
            />
        <Label
            x:Name="SumaLabel"
            Text="{Binding Suma, Mode=OneWay, StringFormat='Caly rachunek wynosi: {0:F2} zł '}"
            HorizontalOptions="Center"
            FontSize="Medium"/>
        <Label
            x:Name="NaOsobeLabel"
            Text="{Binding NaOsobe, Mode=OneWay , StringFormat='Kwota na osobe to: {0:F2} zł '}"
            IsVisible="False"
            HorizontalOptions="Center"
            FontSize="Medium"/>
        <Label Text="Procent napiwku: "
               HorizontalOptions="Center"/>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button x:Name="Button10"
                    Text="10%"
                    Clicked="Przycisk10"/>
            <Button x:Name="Button15"
                    Text="15%"
                    Clicked="Przycisk15"/>
            <Button x:Name="Button20"
                    Text="20%"
                    Clicked="Przycisk20"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>