<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui18.NewPage3"
             Title="18.4">
    <VerticalStackLayout WidthRequest="600" HorizontalOptions="Center" Spacing="15">
        <Label 
            Text="Kalkulator napiwków"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large"/>
        <Entry
            x:Name="Kwota"
            Keyboard="Numeric"
            Placeholder="Wpisz kwote rachunku"
            PlaceholderColor="LightGray"/>
        <Slider
            x:Name="Napiwek"
            Minimum="0"
            Maximum="30"
            Value="15"/>
        <Label
            x:Name="WartoscNapiwkuLabel"
            BindingContext="{x:Reference Napiwek}"
            Text="{Binding Value, StringFormat='Napiwek to {0:F0}%'}"
            HorizontalOptions="Center"
            FontSize="Medium"/>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
        <Label
            Text="Podziel Rachunek"
            FontSize="Medium"/>
        <Switch
            x:Name="PareOsob"
            Toggled="LiczbaOsob"/>
        </HorizontalStackLayout>
        <Entry
            x:Name="OsobyEntry"
            Placeholder="Wpisz liczbe osób"
            PlaceholderColor="LightGray"
            IsVisible="False"/>
        <Label
            x:Name="NapiwekLabel"
            Text=""
            HorizontalOptions="Center"
            FontSize="Medium"
            />
        <Label
            x:Name="SumaLabel"
            Text="Suma: "
            HorizontalOptions="Center"
            FontSize="Medium"/>
        <Label
            x:Name="NaOsobeLabel"
            Text="Na osobę: "
            IsVisible="False"
            HorizontalOptions="Center"
            FontSize="Medium"/>
    </VerticalStackLayout>
</ContentPage>